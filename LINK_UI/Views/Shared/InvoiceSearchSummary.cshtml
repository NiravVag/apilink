
@{
    ViewData["Title"] = "InvoiceSearchSummary";
}


@model List<DTO.Invoice.InvoiceBookingData>

<xls-sheet name="Invoice Search Summary">
    <table xls-begin="A:1" style="border-style:solid">
        <tr style="background-color:#f5f5f5;font-weight:bold;text-align:center">
            <th>Invoice No</th>
            <th>Invoice Date</th>
            <th>Invoice Type</th>
            <th>Billed To</th>
            <th>Billed To Name</th>
            <th>Customer Name</th>
            <th>Service Line</th>
            <th>Service Type</th>
            <th style="text-align:center">Booking No</th>
            <th>Service Date From</th>
            <th>Service Date To</th>
            <th>Invoice office</th>
            <th>Invoice office</th>
            <th>Invoice Currency</th>
            <th>Inspection Fee</th>
            <th>Travel Land Expense</th>
            <th>Travel Air Expense</th>
            <th>Travel Other Expense</th>
            <th>Travel Total Expense</th>
            <th style="text-align:center">Hotel Fee</th>
            <th>Other Expense</th>
            <th style="text-align:center">Discount</th>
            <th style="text-align:center">Extra Fee</th>
            <th style="text-align:center">Total Fee</th>
            <th>Is Inspection</th>
            <th>Is Travel Expense</th>
            <th>Created By</th>
        </tr>
        @foreach(var item in Model)
        {
    <tr>
        <td width="200px">@item.InvoiceNo</td>
        <td width="200px">@item.InvoiceDate</td>
        <td width="200px">@item.InvoiceTypeName</td>
        <td width="200px">@item.InvoiceTo</td>
        <td width="200px">@item.InvoiceToName</td>
        <td width="200px">@item.CustomerName</td>
        <td width="200px">@item.Service</td>
        <td width="200px">@item.ServiceType</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.BookingId</td>
        <td width="150px">@item.BookingServiceDateFrom</td>
        <td width="150px">@item.BookingServiceDateTo</td>
        <td width="150px">@item.InvoiceOffice</td>
        <td width="150px" style="text-align:center">@item.InvoiceCurrency</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.InspFees</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.TravelLandFee</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.TravelAirFee</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.TravelOtherFee</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.TravelFee</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.HotelFee</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.OtherExpense</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.Discount</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.ExtraFees</td>
        <td width="150px" xls-type="number" style="text-align:center">@item.InvoiceTotal</td>
        <td width="150px">@item.IsInspection</td>
        <td width="150px">@item.IsTravelExpense</td>
        <td width="150px">@item.CreatedBy</td>
    </tr>
        }
        </table>
    </xls-sheet>

