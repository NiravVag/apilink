
@{
    ViewData["Title"] = "PurchaseOrderProducts";
}


 
@model IEnumerable<DTO.PurchaseOrder.PurchaseOrderExportDataItem>

<xls-sheet name="Purchase Order Products">
    <table xls-begin="A:1" style="border-style:solid">
        <tr style="background-color:#f5f5f5;font-weight:bold;text-align:center">
            <th>Customer</th>
            <th>PO NO</th>
            <th>Customer Reference PO</th>
            <th>Product Id</th>
            <th>Product Description</th>
            <th>Destination Country</th>
            <th>ETD</th>
            <th>Supplier</th>
            <th>Factory</th>
            <th>Qty</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td height="200px" width="200px">@item.CustomerName</td>
                <td height="200px" width="200px">@item.PO</td>
                <td width="200px">@item.CustomerReferenceNo</td>
                <td width="200px">@item.ProductId</td>
                <td width="250px">@item.ProductDescription</td>
                <td width="200px">@item.DestinationCountry</td>
                <td width="100px">@item.ETD</td>
                <td width="250px">@item.Supplier</td>
                <td width="250px">@item.Factory</td>
                <td width="100px" xls-type="number">@item.Qty</td>
            </tr>
        }
    </table>
</xls-sheet>
