@{
    ViewData["Title"] = "CurrencyMatrix";
}
@model IEnumerable<DTO.ExchangeRate.CurrencyItem> 

<xls-sheet name="Currency Matrix">
    <table xls-begin="A:1" style="border-style:solid">
        <tr style="background-color:#f5f5f5;font-weight:bold;text-align:center">
            <th></th>
            @foreach (var item in Model)
            {
                <th>@item.Currency.CurrencyCode</th>
            }
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td width="250px" style="background-color:#f5f5f5">@item.Currency.CurrencyName</td>
                @foreach(var subItem in item.CurrencyValueList)
                {
                    <td xls-type="number">@subItem.Value</td>
                }
            </tr>
        }
    </table>
</xls-sheet>