
@{
    ViewData["Title"] = "StaffDetails";
}

@model IEnumerable<DTO.HumanResource.StaffItem> 

<xls-sheet name="Staff Export">
    <table xls-begin="A:1" style="border-style:solid">
        <tr style="background-color:#f5f5f5;font-weight:bold;text-align:center">
            <th>Staff Name</th>
            <th>Country Name</th>
            <th>Position Name</th>
            <th>Department Name</th>
            <th>Office Name</th>
            <th>Join Date</th>
            <th>EmployeeType</th>
            <th>Status Name</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td height="200px" width="250px">@item.StaffName</td>
            <td width="150px">@item.CountryName</td>
            <td width="300px">@item.PositionName</td>
            <td width="250px">@item.DepartmentName</td>
            <td width="100px">@item.OfficeName</td>
            <td width="150px">@item.JoinDate</td>
            <td width="150px">@item.EmployeeType</td>
            <td width="150px">@item.StatusName</td>
        </tr>
        }
    </table>
</xls-sheet>